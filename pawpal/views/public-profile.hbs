{{!-- {{#if errorMessage}}
    <div style="color: red; margin-bottom: 10px;">{{errorMessage}}</div>
{{/if}}
 --}}

<div class="container">
  <!-- Row for the two main columns -->
  <div class="row">
    <!-- Left column (4 units) -->
    <div class="col-md-4">
      <!-- Section for the image -->
   
      <div class="border rounded shadow-sm p-3" style="background-color:	#3b82f680; color:white">
           <h3>My Profile</h3>
        <img class ="img-fluid rounded" src="{{photo}}" alt="Profile Picture">
      </div>

      <!-- Section for general info -->
      <div class="border rounded shadow-sm p-3 mt-3" style="background-color:	#3b82f680;color: white;">
      <h3>Details</h3>
     <p class="lead">
             <strong>Name:</strong> {{name}}<br>
             <strong>Email:</strong> {{email}}<br>
             <strong>Location:</strong> {{location}}<br>
             <strong>Availability</strong> {{availability}}<br>
      </p>
      </div>


       <!-- Section for my pets -->
      <div class="border rounded shadow-sm p-3 mt-3" style="background-color: white;">
               <h3>My Pets</h3>
               <p class="lead">
                                {{#each pets}}
                             
                                    <h5>{{this.name}}</h5>
                      
                                    {{#if this.photo}}
                                    <p>
                                        <img src="{{this.photo}}" alt="{{this.name}}" class="img-fluid rounded" style="max-width: 200px;">
                                    </p>
                                    {{else}}
                                        <p>No photo available.</p>
                                    {{/if}}

                               
                        
                            {{/each}}
                  </p>
      </div>

    </div>

    

    <!-- Right column (8 units) -->
    <div class="col-md-8">


       <!-- Section for 'Services' -->
  <div class="border rounded shadow-sm p-3 " style="background-color: white;">
  <div class="mt-3">
    {{!-- Services --}}
    <h3>Services</h3>

    <div class="services-container" style="display: flex; justify-content: space-evenly;">
      {{#each services}}
        <div class="service">
     
          {{#if (eq this 'Pet Boarding')}}
            <img src="/images/boarding-logo.png" style="max-width: 200px; max-height: 100px;" alt="Pet Boarding">
          {{else if (eq this 'Dog Walking')}}
            <img src="/images/walking-logo.png" style="max-width: 200px; max-height: 100px;" alt="Dog Walking">
          {{else if (eq this 'Pet Sitting')}}
            <img src="/images/pet-sitting-logo.png" style="max-width: 200px; max-height: 100px;" alt="Pet Sitting"> 
            
          {{/if}}
          </p class="lead">{{this}}</p>
              
        </div>
      {{/each}}
    </div>
  </div>
</div>

      <!-- Section for 'About me' -->
      <div class="border rounded shadow-sm p-3 mt-3" style="background-color: white;">
        <h3>About Me</h3>
        <p class="lead">{{about}}</p>
      </div>


 

      <!-- Section for 'User Reviews' -->
      <div class="border rounded shadow-sm p-3 mt-3" style="background-color: white;">
      <div class="mt-3">
  <h3>User Reviews</h3>
  {{#each reviews}}
    <div class="border rounded shadow-sm p-3 my-3" style="background-color: white;">
      <p class="lead">
        <strong>Comment by:</strong> {{this.author.username}}<br>
        <strong>Content:</strong> {{this.content}}<br>
        <strong>Rating:</strong> {{this.rating}}/5
      </p>
    </div>
  {{/each}}
</div>
      </div>

      <!-- Section for 'Leave a Review' -->
      <div class="border rounded shadow-sm p-3 mt-3" style="background-color: white;">
        <h3>Leave a Review</h3>
         <form action="/profile/{{username}}/comment" method="POST">
            <div>
              <p class="lead">
                <label for="content">Comment:</label><br>
                <textarea name="content" id="content" rows="4" cols="50" required></textarea>
            </div>
            <div>
                <label for="rating">
                  <p class="lead">Rating:</p></label><br>
                <select name="rating" id="rating" required>
                    <option value="1">1 Star</option>
                    <option value="2">2 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="5">5 Stars</option>
                </select>
            </div>
            <div>
              <br>
                <button type="submit" class="btn btn-primary"> Submitt</button>
            </div>
            </p>
        </form>
      </div>
    </div>
  </div>
</div>




