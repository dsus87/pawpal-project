<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{appTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
{{!-- <h1>Find Pawpals near you</h1> --}}

<div class="container-lg my-4">
  
    <div class="row">
        <div class="col-md-3">
            
            <div class="border rounded shadow-sm p-3" style="background-color: white;  padding: 10px">
                
                <!-- Filter Form -->
        <form action="/all-sitters" method="get">

    <div  style="background-color: white;">
        <h4 class="fw-bold">Filters</h4>

        <!-- Location Filter -->
        <div class="mb-3">
        <label class="form-label">Location</label>
        <select class="form-control" name="location" id="filterLocation">
            <option value="">Select Location</option>
            <option value="Berlin">Berlin</option>
            <option value="Amsterdam">Amsterdam</option>
            <option value="Portugal">Portugal</option>
        </select>
    </div>

        <!-- Service Filter -->
        <div class="mb-3">
            <label class="form-label">Service</label>
            <select class="form-control" name="services" id="filterService">
                <option value="">Select Service</option>
                <option value="Pet Boarding">Boarding</option>
                <option value="Pet Sitting">Sitting</option>
                <option value="Dog Walking">Walking</option>
            </select>




        </div>
        <!-- Availability Filter -->
      <div class="mb-3">
    <label class="form-label">Availability</label>
    <select class="form-control" id="filterAvailability" name="availability">
        <option value="">Select Availability</option>
        <option value="true">Available</option>
        <option value="false">Unavailable</option>
    </select>
</div>

        <!-- Submit/Reset Button -->
        <button type="submit" class="btn btn-primary">Apply Filters</button>
        <button type="submit" class="btn btn-primary" >Reset</button>

    </div>
        </form>
            </div>
        </div>
        


        <!-- Pet Sitters Profiles Column -->
        <div class="col-md-9">
            {{#each petSitters}}
            <div class="row border rounded shadow-sm overflow-hidden mb-3" style="background-color: white;">
                <div class="col-md-3 p-3">
                  
                    <div class="square-image-container rounded">
                        <img class="img-fluid" src="{{photo}}" style="border-radius: 5px;" alt="Profile Picture">
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="p-3">
                        
                       <a href="profile/{{this.username}}"> <h3 class="fw-bold">{{this.name}}</h3> </a>
                        <p class="text-muted"><strong>Location:</strong> {{this.location}}</p>
                                     <p class="text-muted">
                                                <strong>Availability:</strong> 
                                                    {{#if this.availability}}
                                                        Available
                                                                {{else}}
                                                                    Unavailable
                                                                {{/if}}
                                                            </p>
                        <p class="text-muted"><strong>Services:</strong> {{this.services}}</p>
                        <p class="text-muted">{{this.about}}</p>
                    </div>
                    
                </div>

                
            </div>
            {{/each}}
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>
