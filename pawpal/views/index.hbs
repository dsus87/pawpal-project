<!-- How Pawpal Works Section -->
<section id="how-it-works" class="mt-5 mb-5" >
    <div class="container-lg" style="background-color: rgba(255, 255, 255, 0.6);">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h2 class="display-6 mb-5">How Pawpal Works</h2>
            </div>
        </div>

        <div class="row justify-content-center">
            <!-- Connect with Pet Owners and Pet Sitters -->
            <div class="col-md-3 text-center">
                <div class="connect-image">
                    <img src="/images/connect-people.png" alt="Connect with Pet Owners and Pet Sitters" class="img-fluid">
                </div>
                <p class="lead">Connect with Pet Owners and Pet Sitters</p>
            </div>

            <!-- Choose your service -->
            <div class="col-md-3 text-center">
                <div class="choose-service-image">
                   
                    <img src="/images/choose.png" alt="Choose Your Service" class="img-fluid">
                
                </div>
                <p class="lead">Choose your service</p>
            </div>

            <!-- Arrange a meet & greet -->
            <div class="col-md-3 text-center">
                <div class="meet-greet-image">
                    <img src="/images/calendar.png" alt="Meet and Greet" class="img-fluid">
                </div>
                <p class="lead">Arrange meet & greet</p>
            </div>

            <!-- Make sure you leave comments and reviews -->
            <div class="col-md-3 text-center">
                <div class="verified-image">
                    <img src="/images/verified.png" alt="Leave Comments and Reviews" class="img-fluid">
                </div>
                <p class="lead">Leave comments and reviews</p>
            </div>
        </div>
    </div>
</section>

